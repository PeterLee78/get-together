<div class="home-title">
  <div class="head" style="background-image: url(<%= image_path 'spacedesign.jpg' %>)">
    <div class="company-text">
      <h1>Find the perfect space for your next Get Together</h1>
    </div>
    <form class=form>
      <div>
        <label for="location"></label>
        <input type="text" id="location" name="location" placeholder="Enter location">
        <input list="category" type="text" placeholder="category">
        <datalist id="category">
            <option value="Dinner Party"/>
            <option value="Pool Party"/>
            <option value="Picnic"/>
            <option value="Family Gathering"></option>
            <option value="Children Party"></option>
            <option value="School Gathering"></option>
        </datalist>
        <%= link_to "Search Now!", spaces_path, class: "btn btn-primary" %>
      </div>
    </form>
  </div>
  <div class="cards">

  </div>
</div>

