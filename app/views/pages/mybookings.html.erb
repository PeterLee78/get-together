
<div class="container">
  <h1>Bookings</h1>

  <% @bookings.each do |booking| %>
    <div class="card-product">
      <%= image_tag booking.space.photo.url %>
      <div class="card-product-infos">
        <h2><%= booking.space.name %></h2>
        <p><%= booking.space.location %></p>
        <%= link_to 'Manage booking', edit_space_booking_path(booking.space, booking) %>
      </div>
    </div>
  <% end %>
</div>


