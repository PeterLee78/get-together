<div class="container">
  <div class="booking-listing-header">
    <h1>Your listings</h1>
  </div>
  <% @space_bookings.reverse.each do |space| %>
    <div class="card-listing">
      <div class="image-edit-block">
        <%= image_tag space.photo.url, class: "listing-img"%>
        <%= link_to 'Edit listing', edit_space_path(space.id), class: "listing-card-button"%>
      </div>
      <div class="card-product-listings">
        <h2 class="listing-card-title"><%= space.name %></h2>
        <h4 class="listing-card-location"><%= space.location %></h4>
        <h4 class="listing-card-bookings">Upcoming bookings</h4>
        <div class="bookings-for-listing-container">
          <% space.bookings.each do |booking| %>
            <div class="booking-for-listing-card">
              <p><strong>BOOKED ON:</strong></br> <%= booking.date %></p>
              <%= link_to "Manage booking", edit_space_booking_path(booking.space, space), class: "booking-button" %>
            </div>
          <% end  %>
        </div>
      </div>
    </div>
  <% end %>
</div>





