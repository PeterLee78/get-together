<h1>Spaces#index</h1>

<ul>
  <% @spaces.each do |space| %>
  <li>
    <%= space.name %>
    <%= cl_image_tag space.photo, height: 300, width: 400, crop: :fill %>
  </li>
    <% end %>
</ul>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
